<br>
<h2>Create a New Journey</h2>

	<%= form_for @journey do |f| %>
		<p><%= f.label :name, "Name: " %>
		<%= f.text_field :name, placeholder: "Give your journey a name" %></p>
		<br>

<h3>Where To?</h3>
		<p><%= f.label :origin_string, "From: " %>
		<%= f.text_field :origin_string, placeholder: "street address" %>
		<%= f.label :destination_string, "To: " %>
		<%= f.text_field :destination_string, placeholder: "street address" %></p>
		<br>

<h3>By When?</h3>
		<p><%= f.label :time_must_arrive_by_string, "Must Arrive By: " %>
		<%= f.text_field :time_must_arrive_by_string, placeholder: "e.g. Tuesday 9am" %></p>
		<br>

		<p><%= f.submit "Create Routes" %></p>
	<% end %>



